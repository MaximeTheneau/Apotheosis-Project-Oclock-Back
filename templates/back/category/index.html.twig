{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Les categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>---</th>

            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}" class="btn btn-warning mt-1">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_back_category_new') }}" class="btn btn-success mt-1">Nouvelle categorie</a>
    {% endif %}
    
{% endblock %}
