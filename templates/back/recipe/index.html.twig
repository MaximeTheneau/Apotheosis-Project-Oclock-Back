{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                {# <th>Caption</th> #}
                {# <th>Slug</th> #}
                {# <th>Steps</th> #}
                {# <th>Picture</th> #}
                {# <th>NbMiams</th> #}
                {# <th>Duration</th> #}
                {# <th>Difficulty</th> #}
                <th>---</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.title }}</td>
                <td>
                    <a href="{{ path('app_back_recipe_edit', {'id': recipe.id}) }}"class="btn btn-warning mt-1">Modifier</a>
                    
                </td>
            </tr>
        {% else %}
            
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_recipe_new') }}"class="btn btn-success mt-1">Nouvelle recettes</a>

{% endblock %}
